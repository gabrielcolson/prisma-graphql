{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "repository": "https://github.com/gabrielcolson/prisma-graphql",
  "scripts": {
    "db:migrate:save": "prisma migrate save --experimental",
    "db:migrate:up": "prisma migrate up --experimental",
    "db:migrate:down": "prisma migrate up --experimental",
    "generate:db": "prisma generate",
    "generate:gql": "ts-node --transpile-only src/graphql/schema",
    "generate": "npm run -s generate:db && npm run -s generate:gql",
    "dev": "concurrently --kill-others \"ts-node-dev --no-notify ./src\" \"prisma2 generate --watch\"",
    "lint": "eslint . --ext ts --ignore-path .gitignore",
    "build": "npm run -s generate && tsc",
    "postinstall": "npm run -s generate"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nexus/schema": "^0.13.1",
    "@prisma/client": "^2.0.0-beta.2",
    "apollo-server-express": "^2.11.0",
    "cors": "^2.8.5",
    "env-var": "^6.0.4",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "nexus-prisma": "^0.12.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.2",
    "@types/node": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-plugin-import": "^2.20.1",
    "ts-node": "^8.8.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
